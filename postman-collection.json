{
    "info": {
      "name": "School Payment API",
      "description": "API collection for School Payment and Dashboard microservice",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
      {
        "key": "base_url",
        "value": "http://localhost:3000",
        "type": "string"
      },
      {
        "key": "jwt_token",
        "value": "",
        "type": "string"
      }
    ],
    "item": [
      {
        "name": "Authentication",
        "item": [
          {
            "name": "Register User",
            "request": {
              "method": "POST",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"username\": \"john_doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"school_admin\",\n  \"school_id\": \"65b0e6293e9f76a9694d84b4\"\n}"
              },
              "url": {
                "raw": "{{base_url}}/auth/register",
                "host": ["{{base_url}}"],
                "path": ["auth", "register"]
              }
            }
          },
          {
            "name": "Login",
            "request": {
              "method": "POST",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
              },
              "url": {
                "raw": "{{base_url}}/auth/login",
                "host": ["{{base_url}}"],
                "path": ["auth", "login"]
              }
            },
            "event": [
              {
                "listen": "test",
                "script": {
                  "exec": [
                    "if (pm.response.code === 200) {",
                    "    const response = pm.response.json();",
                    "    pm.collectionVariables.set('jwt_token', response.access_token);",
                    "}"
                  ]
                }
              }
            ]
          },
          {
            "name": "Get Profile",
            "request": {
              "method": "GET",
              "header": [
                {
                  "key": "Authorization",
                  "value": "Bearer {{jwt_token}}"
                }
              ],
              "url": {
                "raw": "{{base_url}}/auth/profile",
                "host": ["{{base_url}}"],
                "path": ["auth", "profile"]
              }
            }
          }
        ]
      },
      {
        "name": "Payment",
        "item": [
          {
            "name": "Create Payment",
            "request": {
              "method": "POST",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                },
                {
                  "key": "Authorization",
                  "value": "Bearer {{jwt_token}}"
                }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"school_id\": \"65b0e6293e9f76a9694d84b4\",\n  \"trustee_id\": \"65b0e552dd31950a9b41c5ba\",\n  \"student_info\": {\n    \"name\": \"John Doe\",\n    \"id\": \"STU001\",\n    \"email\": \"john.doe@school.com\"\n  },\n  \"gateway_name\": \"PhonePe\",\n  \"order_amount\": 2000\n}"
              },
              "url": {
                "raw": "{{base_url}}/payment/create-payment",
                "host": ["{{base_url}}"],
                "path": ["payment", "create-payment"]
              }
            }
          },
          {
            "name": "Get Payment Status",
            "request": {
              "method": "GET",
              "header": [
                {
                  "key": "Authorization",
                  "value": "Bearer {{jwt_token}}"
                }
              ],
              "url": {
                "raw": "{{base_url}}/payment/status/ORDER_001",
                "host": ["{{base_url}}"],
                "path": ["payment", "status", "ORDER_001"]
              }
            }
          }
        ]
      },
      {
        "name": "Transactions",
        "item": [
          {
            "name": "Get All Transactions",
            "request": {
              "method": "GET",
              "header": [
                {
                  "key": "Authorization",
                  "value": "Bearer {{jwt_token}}"
                }
              ],
              "url": {
                "raw": "{{base_url}}/transactions?page=1&limit=10&sortBy=payment_time&sortOrder=desc",
                "host": ["{{base_url}}"],
                "path": ["transactions"],
                "query": [
                  {
                    "key": "page",
                    "value": "1"
                  },
                  {
                    "key": "limit",
                    "value": "10"
                  },
                  {
                    "key": "sortBy",
                    "value": "payment_time"
                  },
                  {
                    "key": "sortOrder",
                    "value": "desc"
                  }
                ]
              }
            }
          },
          {
            "name": "Get Transactions by School",
            "request": {
              "method": "GET",
              "header": [
                {
                  "key": "Authorization",
                  "value": "Bearer {{jwt_token}}"
                }
              ],
              "url": {
                "raw": "{{base_url}}/transactions/school/65b0e6293e9f76a9694d84b4?page=1&limit=10&sortBy=payment_time&sortOrder=desc",
                "host": ["{{base_url}}"],
                "path": ["transactions", "school", "65b0e6293e9f76a9694d84b4"],
                "query": [
                  {
                    "key": "page",
                    "value": "1"
                  },
                  {
                    "key": "limit",
                    "value": "10"
                  },
                  {
                    "key": "sortBy",
                    "value": "payment_time"
                  },
                  {
                    "key": "sortOrder",
                    "value": "desc"
                  }
                ]
              }
            }
          },
          {
            "name": "Get Transaction Status",
            "request": {
              "method": "GET",
              "header": [
                {
                  "key": "Authorization",
                  "value": "Bearer {{jwt_token}}"
                }
              ],
              "url": {
                "raw": "{{base_url}}/transactions/status/ORDER_001",
                "host": ["{{base_url}}"],
                "path": ["transactions", "status", "ORDER_001"]
              }
            }
          },
          {
            "name": "Create Dummy Data",
            "request": {
              "method": "POST",
              "header": [
                {
                  "key": "Authorization",
                  "value": "Bearer {{jwt_token}}"
                }
              ],
              "url": {
                "raw": "{{base_url}}/transactions/dummy-data",
                "host": ["{{base_url}}"],
                "path": ["transactions", "dummy-data"]
              }
            }
          }
        ]
      },
      {
        "name": "Webhook",
        "item": [
          {
            "name": "Process Webhook",
            "request": {
              "method": "POST",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"status\": 200,\n  \"order_info\": {\n    \"order_id\": \"ORDER_001\",\n    \"order_amount\": 2000,\n    \"transaction_amount\": 2200,\n    \"gateway\": \"PhonePe\",\n    \"bank_reference\": \"YESBNK222\",\n    \"status\": \"success\",\n    \"payment_mode\": \"upi\",\n    \"payemnt_details\": \"success@ybl\",\n    \"Payment_message\": \"payment success\",\n    \"payment_time\": \"2025-04-23T08:14:21.945+00:00\",\n    \"error_message\": \"NA\"\n  }\n}"
              },
              "url": {
                "raw": "{{base_url}}/webhook",
                "host": ["{{base_url}}"],
                "path": ["webhook"]
              }
            }
          }
        ]
      },
      {
        "name": "Health Check",
        "item": [
          {
            "name": "Health Check",
            "request": {
              "method": "GET",
              "url": {
                "raw": "{{base_url}}/health",
                "host": ["{{base_url}}"],
                "path": ["health"]
              }
            }
          }
        ]
      }
    ]
  }
  